<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="horizontal"
    android:padding="16sp"
    tools:context="com.example.aliahmed.myapplication.MainActivity">

    <Button
        android:id="@+id/btnFromActivity"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginEnd="16sp"
        android:layout_marginRight="16sp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/app_icon_new"
        android:text="@string/from_activity" />

    <Button
        android:id="@+id/btnFromFragment"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/app_icon_new"
        android:text="@string/from_fragment" />

</LinearLayout>
